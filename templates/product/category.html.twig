{% extends 'base.html.twig' %}

{% block title %}Catégorie :
	{{ category.name }}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">{{ category.name }}</li>
	</ol>

	<h1 class="my-5">Catégorie :
		{{ category.name }}
	</h1>

	<div class="row h-100">
		{% for product in category.products %}
			<div class="col-3 mb-4 h-50">
				<div class="card">
					<img src="{{ product.mainPicture }}" class="img-fluid" alt="Image du produit">
					<div class="card-body">
						<h4 class="card-title text-center">
							{{ product.name }}
							{{ product.price / 100 }}
							&euro;
						</h4>
						<div class="text-center mb-2">
							<span class="badge badge-info p-2">
								{{ product.category.name }}
							</span>
						</div>
						<p class="card-text">{{ product.shortDescription }}</p>
						<div class="text-center">
							<a href="{{ path('product_show', {'category_slug' : product.category.slug, 'slug' : product.slug}) }}" class="btn btn-primary mr-3">
								Détails
							</a>
							<a href="#" class="btn btn-success">Ajouter</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
