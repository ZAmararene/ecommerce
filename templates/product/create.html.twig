{% extends "base.html.twig" %}

{% block title %}
	Nouveau produit
{% endblock %}

{% block body %}
	<h1 class="mb-5">Nouveau produit</h1>

	{{ form_start(form, {'attr' : {'novalidate' : 'novalidate'}}) }}

	{{ form_errors(form) }}

	<div class="row">
		<div class="col">
			{{ form_row(form.name) }}
			{{ form_row(form.price) }}
		</div>
		<div class="col">
			{{ form_row(form.mainPicture) }}
			{{ form_row(form.shortDescription) }}
			{{ form_row(form.category) }}
		</div>
	</div>
	<button class="btn btn-primary my-3">
		<i class="fas fa-save mr-2"></i>
		Cr√©er le produit
	</button>
	{{ form_end(form) }}
{% endblock %}
